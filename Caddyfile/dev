http://localhost:80 {
	log {
		format console
		level info
	}

	handle /minio-console/* {
		uri strip_prefix /minio-console
		reverse_proxy minio:9001
	}

	handle /prometheus-console/* {
		uri strip_prefix /prometheus-console
		reverse_proxy prometheus:9090 # includes console
	}

	handle /alertmanager-console/* {
		uri strip_prefix /alertmanager-console
		reverse_proxy alertmanager:9093 # includes console
	}

	handle /tempo-console/* {
		uri strip_prefix /tempo-console
		reverse_proxy tempo:3200
	}

	handle /otel-collector-health {
		uri strip_prefix /otel-collector-health
		reverse_proxy otel-collector:13133
	}

	handle {
		reverse_proxy grafana:3000
	}
}

